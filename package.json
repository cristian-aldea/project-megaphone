{
  "name": "web-toolbox",
  "scripts": {
    "build-clean": "recursive-delete 'dist'",
    "build-ts-dev": "rollup --config rollup.config.dev.js",
    "build-ts-prod": "rollup --config rollup.config.prod.js",
    "build-css-dev": "sass src/scss/main.scss:dist/css/main.css --style expanded",
    "build-css-prod": "sass src/scss/main.scss:dist/css/main.css --style compressed --no-source-map",
    "build-copy": "recursive-copy 'src/copy' 'dist'",
    "build-dev": "npm run build-clean && npm-run-all -p build-ts-dev build-css-dev build-copy",
    "build-prod": "npm run build-clean && npm-run-all -p build-ts-prod build-css-prod build-copy",
    "watch-css": "chokidar './src/**/*.scss' -c 'npm run build-css-dev'",
    "watch-ts": "chokidar './src/**/*.ts' -c 'npm run build-ts-dev'",
    "watch-copy": "chokidar './src/copy/**/*.*' -c 'npm run build-copy'",
    "watch": "npm-run-all -p watch-css watch-ts watch-copy",
    "serve": "browser-sync start --port 8080 --files 'dist' --server 'dist'",
    "start": "npm run build-dev && npm-run-all -p watch serve"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "browser-sync": "^2.27.5",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "recursive-fs": "^2.1.0",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {}
}
